%div.alert-success
  - if flash[:alert]
    %p= flash[:alert]

%h1 Users
%table.table.table-striped.table-bordered
  %thead
    %tr.success
      %th First Name
      %th Last Name
      %th Email
      %th Links
  %tbody
    - @users.each do |user|
      %tr
        %td= user.first_name
        %td= user.last_name
        %td= user.email
        %td
          = link_to '', edit_user_path(user), :class => "glyphicon glyphicon-edit"
          |
          \#{link_to '', user, method: :delete, :id => "delete_user_#{user.id}", data: { confirm: 'Are you sure?' }, :class => "glyphicon glyphicon-remove"}
%br/
