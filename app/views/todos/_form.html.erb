<%= form_for @todo, :html => { :class => 'todo_form' } do |f| %>
  <% if @todo.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@todo.errors.count, "error") %> prohibited this list from being saved: </h2>
      <ul>
        <% @todo.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :description %><br>
    <%= f.text_area :description, :rows => 6 %>
  </div>
  <div class="field">
    <%= f.label "Click task to be done" %> <br />
    <%= f.check_box :completed %><br />
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>



